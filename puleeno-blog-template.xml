<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE html>
<html b:css='false' b:version='2' class='v2' expr:dir='data:blog.languageDirection' expr:lang='data:blog.locale'
    xmlns='http://www.w3.org/1999/xhtml'
    xmlns:b='http://www.google.com/2005/gml/b'
    xmlns:data='http://www.google.com/2005/gml/data'
    xmlns:expr='http://www.google.com/2005/gml/expr'>
    &lt;head&gt;
    <title><data:blog.pageTitle/></title>
    <b:skin>
        <![CDATA[##############################
            Name: Puleeno Blog
            Author: Puleeno Nguyen
            URL: https://blog.puleeno.com
            #############################
        ]]>
    </b:skin>
    <b:template-skin>
    </b:template-skin>
    &lt;/head&gt;&lt;!--<head/>--&gt;

    <body>
        <b:section class='navbar' id='navbar' maxwidgets='1' name='Navbar' showaddelement='no'>
            <b:widget id='Navbar1' locked='true' type='Navbar'></b:widget>
        </b:section>
        <div id='pl-wrapper' class='pl-wrapper'>
            <header id='pl-site-header' class='site-header'>
                <div class="container">
                    <b:section id='header' class='header' name='Header' maxwidgets='1' showaddelement='no'>
                        <b:widget id='Header1' locked='true' type='Header'>
                        </b:widget>
                    </b:section>
                </div>
            </header>


            <div id='pl-site-content' class='main-content'>
                <b:section id='main' name='Main' showaddelement='no'>
                    <b:widget id='Blog1' locked='true' type='Blog'>
                    </b:widget>
                </b:section>
            </div>

            <footer id="pl-site-footer" class="site-footer">
                <div class="container">
                    <macro:include id='footer-sections' name='sections'>
                        <macro:param default='' name='name' value='Footer' />
                        <macro:param default='3' name='col' />
                        <macro:param default='footer' name="idPrefix" />
                        <macro:param default='foot' name='class' />
                        <macro:param default='false' name='includeBottom' />
                    </macro:include>
                </div>
            </footer>
        </div>
    &lt;!--</body>--&gt;&lt;/body&gt;
    <macro:includable id="sections" var="pl">
        <macro:if cond='data:pl.col > 0'>
            <b:section mexpr:id='data:pl.idPrefix + "1"' mexpr:class='data:pl.class' mexpr:name='data:pl.name + " 1"' />
        </macro:if>
    </macro:includable>
</html>
